{
  "$schema": "https://schemas.wp.org/wp/6.2/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "custom": {
      "palette": {
        "primary": "#1e40af",
        "secondary": "#9333ea",
        "foreground": "#111827",
        "background": "#f8fafc",
        "muted": "#64748b"
      }
    },
    "color": {
      "palette": [
        { "slug": "primary", "name": "Cobalt", "color": "#1e40af" },
        { "slug": "secondary", "name": "Violet", "color": "#9333ea" },
        { "slug": "accent", "name": "Coral", "color": "#fb7185" },
        { "slug": "neutral", "name": "Slate", "color": "#475569" },
        { "slug": "background", "name": "Cloud", "color": "#f8fafc" },
        { "slug": "foreground", "name": "Ink", "color": "#111827" }
      ],
      "defaultPalette": false,
      "duotone": [
        {
          "slug": "brand",
          "colors": ["#1e40af", "#9333ea"],
          "name": "Brand Duotone"
        }
      ]
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    },
    "spacing": {
      "spacingScale": {
        "steps": 0,
        "mediumStep": 1.3,
        "unit": "rem"
      },
      "blockGap": "1.75rem"
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Inter', 'Helvetica Neue', Arial, sans-serif",
          "name": "Inter",
          "slug": "inter"
        },
        {
          "fontFamily": "'Playfair Display', 'Times New Roman', serif",
          "name": "Playfair Display",
          "slug": "playfair"
        }
      ],
      "lineHeight": "1.65"
    }
  },
  "styles": {
    "color": {
      "background": "#f8fafc",
      "text": "#111827"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--playfair)",
          "fontWeight": "600",
          "lineHeight": "1.2"
        },
        "color": {
          "text": "#111827"
        }
      },
      "link": {
        "color": {
          "text": "#1e40af"
        },
        "typography": {
          "textDecoration": "none",
          "fontWeight": "600"
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "18px"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "0",
        "bottom": "0",
        "left": "0"
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Site Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Site Footer",
      "area": "footer"
    }
  ],
  "templates": [
    {
      "name": "front-page",
      "title": "Front Page",
      "postTypes": ["page"]
    },
    {
      "name": "single",
      "title": "Single Post"
    },
    {
      "name": "archive",
      "title": "Archive"
    }
  ]
}
